<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- ĐÃ CẬP NHẬT: Định nghĩa màu xanh dương làm màu chính thay vì màu tím mặc định -->
    <style name="Base.Theme.QuanLyPhongTro_ChuTro" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Màu chính xanh dương cho toàn bộ app -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/primary_blue_dark</item>
        <item name="colorPrimaryContainer">@color/primary_blue_lighter</item>
        <item name="colorOnPrimaryContainer">@color/primary_blue_dark</item>
        <item name="colorSecondary">@color/primary_blue</item>
        <item name="colorSecondaryContainer">@color/primary_blue_lighter</item>
        <item name="colorOnSecondaryContainer">@color/primary_blue_dark</item>
        <item name="colorAccent">@color/primary_blue</item>
        
        <!-- Màu cho các button Material3 -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
    </style>

    <style name="Theme.QuanLyPhongTro_ChuTro" parent="Base.Theme.QuanLyPhongTro_ChuTro" />
    
    <!-- Style cho Button chính với gradient xanh dương -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>
    
    <!-- Style cho Button viền xanh dương -->
    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary_blue</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="iconTint">@color/primary_blue</item>
        <item name="cornerRadius">20dp</item>
    </style>
</resources>