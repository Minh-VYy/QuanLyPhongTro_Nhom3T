<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Nền trắng -->
            <stroke
                android:width="2dp"
                android:color="#3B82F6" />   <!-- blue-500 nổi bật khi focus -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Hovered / Default state -->
    <item android:state_hovered="true">
        <shape>
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1.5dp"
                android:color="#60A5FA" />   <!-- blue-400 nhẹ hơn -->
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape>
            <solid android:color="#FAFAFA" /> <!-- Nền xám siêu nhạt cho cảm giác hiện đại -->
            <stroke
                android:width="1dp"
                android:color="#CBD5E1" />   <!-- gray-300 nhẹ nhàng -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>