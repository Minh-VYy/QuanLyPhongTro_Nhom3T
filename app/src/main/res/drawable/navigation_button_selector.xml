<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Navigation Button Selector
    Sử dụng cho bottom navigation bar
    - Selected state: nền xanh dương nhạt, icon và text màu xanh đậm
    - Unselected state: nền trong suốt, icon và text màu xám
    - Pressed state: hiệu ứng ripple
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Selected state: nền xanh nhạt -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_blue_lighter" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Pressed state: nền xanh rất nhạt -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
    <!-- Default state: nền trong suốt -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    
</selector>