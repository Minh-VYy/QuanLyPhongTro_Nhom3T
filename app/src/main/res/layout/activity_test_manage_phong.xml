<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Manage Phong Functions"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/edt_phong_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="PhongId (UUID)"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề mới"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giá mới"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btn_test_ownership"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Ownership Check"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Update Phong"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Toggle Active"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btn_test_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Delete Phong"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/error" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:padding="8dp"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:text="Waiting for tests..." />

    </LinearLayout>

</ScrollView>