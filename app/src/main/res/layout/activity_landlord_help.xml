<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg">

    <!-- HEADER TOOLBAR (Thanh tiêu đề) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_trogiup"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="@color/primary"
        android:paddingTop="18dp"
        android:title=""
        android:elevation="4dp">

        <!-- Layout chứa nút quay lại + tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="12dp">

            <!-- Nút quay lại -->
            <ImageButton
                android:id="@+id/btn_back_trogiup"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_media_previous"
                app:tint="@color/white"/>

            <!-- Tiêu đề màn hình -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trung tâm Hỗ trợ"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!-- SCROLL MAIN CONTENT (Nội dung) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:spacing="8dp">

            <!-- CARD 1: Danh sách câu hỏi thường gặp (FAQ) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <!-- Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Câu hỏi thường gặp"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <!-- Danh sách câu hỏi -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="12dp">

                    <!-- Q1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                            android:text="[Đăng tin] Làm thế nào để tin đăng hiệu quả?" android:textSize="14sp"/>
                        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_arrow_forward"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

                    <!-- Q2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                            android:text="[Thanh toán] Tôi không nhận được tiền từ người thuê" android:textSize="14sp"/>
                        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_arrow_forward"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

                    <!-- Q3 + tag HOT -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                            android:text="[Thông tin] Làm sao để liên hệ Người thuê?  " android:textSize="14sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="HOT"
                            android:background="#FEE2E2" android:padding="6dp" android:textColor="#BE123C" android:textSize="12sp"
                            android:layout_marginRight="8dp"/>
                        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_arrow_forward"/>
                    </LinearLayout>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

                    <!-- Q4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"
                            android:text="[Lỗi] Tại sao tôi không thể đăng nhập?" android:textSize="14sp"/>
                        <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_arrow_forward"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Nút xem thêm FAQ -->
                <TextView
                    android:id="@+id/tv_xem_them"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem thêm"
                    android:textColor="@color/primary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>


            <!-- CARD 2: Liên hệ hỗ trợ (chat / gọi tổng đài)     -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="16dp"
                android:elevation="2dp">

                <!-- Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bạn cần tìm thêm thông tin?"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"/>

                <!-- Mục chat -->
                <LinearLayout
                    android:id="@+id/row_chat"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@android:drawable/ic_dialog_email" app:tint="@color/primary"/>
                    <TextView android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:text="Trò chuyện với chúng tôi" android:layout_marginLeft="12dp" android:textSize="15sp"/>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_arrow_forward"/>
                </LinearLayout>

                <!-- Divider -->
                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE"/>

                <!-- Mục gọi tổng đài -->
                <LinearLayout
                    android:id="@+id/row_call"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp">

                    <ImageView android:layout_width="36dp" android:layout_height="36dp" android:src="@android:drawable/ic_menu_call" app:tint="@color/primary"/>
                    <LinearLayout android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginLeft="12dp">
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gọi tổng đài" android:textSize="15sp"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Miễn phí" android:textSize="12sp" android:textColor="#10B981"/>
                    </LinearLayout>
                    <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="@drawable/ic_arrow_forward"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Khoảng trống cuối trang -->
            <View android:layout_width="match_parent" android:layout_height="40dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
