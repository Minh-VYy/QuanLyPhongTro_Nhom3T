<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".ui.tenant.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient"
        app:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="15dp"
            android:paddingBottom="12dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_scrollFlags="noScroll">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                app:tint="@color/white"
                android:layout_marginEnd="12dp" />

            <include
                android:id="@+id/roleSwitcher"
                layout="@layout/view_role_switcher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/btnMessages"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message"
                app:tint="@color/white"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/search_background"
            android:padding="4dp">

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/searchButton"
                android:background="@android:color/transparent"
                android:hint="Tìm kiếm..."
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textColorHint="#999" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:background="@drawable/circle_primary"
                android:src="@drawable/ic_search"
                app:tint="@color/white" />
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/filterScroll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:scrollbars="none"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/filterContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:gravity="center_vertical">

                <!-- Nút Bộ lọc chính - gradient xanh dương, có chức năng mở dialog filter -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_primary_gradient"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_filter"
                    app:iconTint="@color/white"
                    app:iconPadding="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Bộ lọc"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="12dp" />

                <!-- Nút Giá tốt - lọc theo giá từ thấp đến cao -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPriceFilter"
                    style="@style/Widget.App.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    app:icon="@drawable/ic_price"
                    app:iconPadding="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Giá tốt"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <!-- Nút Gần tôi - lọc theo vị trí gần người dùng -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNearbyFilter"
                    style="@style/Widget.App.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    app:icon="@drawable/ic_location"
                    app:iconPadding="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Gần tôi"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <!-- Nút Đánh giá - lọc theo rating cao -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRatingFilter"
                    style="@style/Widget.App.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginEnd="10dp"
                    app:icon="@drawable/ic_star"
                    app:iconPadding="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Đánh giá"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

                <!-- Nút Mới nhất - lọc theo thời gian đăng mới nhất -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNewestFilter"
                    style="@style/Widget.App.Button.Outlined"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    app:icon="@drawable/ic_bolt"
                    app:iconPadding="4dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Mới nhất"
                    android:textSize="12sp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

            </LinearLayout>

        </HorizontalScrollView>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="Phòng trọ đề xuất"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- ProgressBar để hiển thị khi đang load dữ liệu -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/roomRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_tenant_room_grid" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- ==================== BOTTOM NAVIGATION BAR ==================== -->
    <!-- Navigation bar với 4 tab: Trang chủ, Đặt lịch, Thông báo, Tôi -->
    <!-- Tab được chọn có màu xanh dương, tab chưa chọn có màu xám -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="8dp">

        <!-- Tab Trang chủ - đang được chọn (màu xanh) -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/navHomeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="@color/primary_blue" />

            <TextView
                android:id="@+id/navHomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textColor="@color/primary_blue"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Tab Đặt lịch - chưa chọn (màu xám) -->
        <LinearLayout
            android:id="@+id/navBooking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/navBookingIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/navBookingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Tab Thông báo - chưa chọn (màu xám) -->
        <LinearLayout
            android:id="@+id/navNotification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/navNotificationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/navNotificationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

        <!-- Tab Tôi - chưa chọn (màu xám) -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/navProfileIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/navProfileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi"
                android:textColor="@color/text_secondary"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
