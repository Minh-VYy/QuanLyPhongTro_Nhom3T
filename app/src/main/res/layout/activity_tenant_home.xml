<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".ui.tenant.MainActivity">

    <!-- Header Compact -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/header_gradient"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top Row: Menu, Dropdown, Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Menu Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_menu"
                app:tint="@color/white"
                android:layout_marginEnd="12dp" />

            <!-- Dropdown: Người thuê / Chủ trọ -->
            <include
                android:id="@+id/roleSwitcher"
                layout="@layout/view_role_switcher"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <!-- Message Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_message"
                app:tint="@color/white"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp" />


        </LinearLayout>

        <!-- Search Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/search_background"
            android:padding="4dp">

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/searchButton"
                android:background="@android:color/transparent"
                android:hint="Tìm kiếm..."
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textColorHint="#999" />

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:background="@drawable/circle_primary"
                android:src="@drawable/ic_search"
                app:tint="@color/white" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Bộ lọc-->
    <HorizontalScrollView
        android:id="@+id/filterScroll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:scrollbars="none"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <LinearLayout
            android:id="@+id/filterContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnFilter"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_primary"
                android:drawableStart="@drawable/ic_filter"
                android:drawablePadding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Bộ lọc"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnPriceFilter"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_outline"
                android:drawableStart="@drawable/ic_price"
                android:drawablePadding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Giá tốt"
                android:textColor="#7c3aed"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnNearbyFilter"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_outline"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Gần tôi"
                android:textColor="#7c3aed"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnRatingFilter"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_outline"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Đánh giá"
                android:textColor="#7c3aed"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnNewestFilter"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/button_outline"
                android:drawableStart="@drawable/ic_bolt"
                android:drawablePadding="4dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Mới nhất"
                android:textColor="#7c3aed"
                android:textSize="12sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNav"
        app:layout_constraintTop_toBottomOf="@+id/filterScroll">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:text="Phòng trọ đề xuất"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Danh mục sản phẩm -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/roomRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_tenant_room_grid" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Trang chủ -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/navHomeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                app:tint="#4a90e2" />

            <TextView
                android:id="@+id/navHomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textColor="#4a90e2"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Đặt lịch -->
        <LinearLayout
            android:id="@+id/navBooking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/navBookingIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                app:tint="#666" />

            <TextView
                android:id="@+id/navBookingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch"
                android:textColor="#666"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Thông báo -->
        <LinearLayout
            android:id="@+id/navNotification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/navNotificationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notification"
                app:tint="#666" />

            <TextView
                android:id="@+id/navNotificationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông báo"
                android:textColor="#666"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Tôi -->
        <LinearLayout
            android:id="@+id/navProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="6dp">

            <ImageView
                android:id="@+id/navProfileIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user"
                app:tint="#666" />

            <TextView
                android:id="@+id/navProfileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tôi"
                android:textColor="#666"
                android:textSize="10sp"
                android:layout_marginTop="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
