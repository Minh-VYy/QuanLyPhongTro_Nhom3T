<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_payment_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_payment" 
            android:background="@drawable/circle_light_blue"
            android:padding="6dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tv_payment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phạm Văn D - Cọc phòng #123"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_payment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01/10/2025"
                android:textSize="13sp"
                android:textColor="@color/muted"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_payment_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.500.000 đ"
                android:textSize="15sp"
                android:textColor="@color/primary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_payment_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chờ xác nhận"
                android:textSize="11sp"
                android:textColor="@color/muted"
                android:layout_marginTop="2dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Action buttons row -->
    <LinearLayout
        android:id="@+id/ll_payment_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingBottom="8dp"
        android:gravity="end"
        android:visibility="visible">

        <Button
            android:id="@+id/btn_payment_reject"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Từ chối"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:background="@drawable/button_red_rounded"
            android:layout_marginEnd="6dp"
            android:paddingHorizontal="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"/>

        <Button
            android:id="@+id/btn_payment_accept"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Xác nhận"
            android:textSize="11sp"
            android:textColor="@color/white"
            android:background="@drawable/button_green_rounded"
            android:paddingHorizontal="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
