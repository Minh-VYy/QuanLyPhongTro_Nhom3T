<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.tenant.MessageDetailActivity">

    <TextView
        android:id="@+id/tv_detail_requester_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#1F2937"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_detail_booking_time"
        tools:text="Nguyễn Văn A" />

    <TextView
        android:id="@+id/tv_detail_booking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#9CA3AF"
        app:layout_constraintTop_toTopOf="@id/tv_detail_requester_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_detail_requester_name"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="15:30 - 01/10/2025" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E7EB"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_requester_name" />

    <TextView
        android:id="@+id/tv_detail_room_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phòng liên quan:"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        android:textColor="#6B7280"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_detail_room_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        android:textColor="#1F2937"
        app:layout_constraintStart_toEndOf="@id/tv_detail_room_label"
        app:layout_constraintTop_toTopOf="@id/tv_detail_room_label"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Phòng trọ A (Mã 101)" />

    <TextView
        android:id="@+id/tv_detail_full_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#374151"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_room_name"
        app:layout_constraintBottom_toTopOf="@id/btn_detail_reply"
        tools:text="Chào bạn, tôi rất quan tâm đến căn phòng này. Tôi có thể xem phòng vào khoảng 4 giờ chiều hôm nay (Thứ 6) được không? Vui lòng phản hồi sớm cho tôi biết nhé. Cảm ơn nhiều." />

    <Button
        android:id="@+id/btn_detail_reply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phản hồi / Bắt đầu Chat"
        android:textColor="@android:color/white"
        android:backgroundTint="#4F46E5"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_detail_delete" />

    <Button
        android:id="@+id/btn_detail_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa Tin nhắn"
        android:textColor="#EF4444"
        android:backgroundTint="#FEE2E2"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>