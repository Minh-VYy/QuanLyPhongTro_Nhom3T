<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Database Debug Tool"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btn_test_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Test Kết Nối Database"
        android:layout_marginBottom="12dp"
        android:background="@color/primary"
        android:textColor="@color/white"
        android:padding="12dp" />

    <Button
        android:id="@+id/btn_test_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Test Query Cơ Bản"
        android:layout_marginBottom="12dp"
        android:background="@color/primary"
        android:textColor="@color/white"
        android:padding="12dp" />

    <Button
        android:id="@+id/btn_test_bookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Test Query Yêu Cầu Đặt Phòng"
        android:layout_marginBottom="24dp"
        android:background="@color/primary"
        android:textColor="@color/white"
        android:padding="12dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_debug_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhấn các nút trên để test kết nối database"
            android:textSize="14sp"
            android:padding="16dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:fontFamily="monospace" />

    </ScrollView>

</LinearLayout>