<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_yeucau"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_yeucau"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/primary"
        android:paddingTop="12dp"
        android:elevation="4dp"
        app:title="">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageButton
                android:id="@+id/btn_back_yeucau"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                app:tint="@color/white"
                android:contentDescription="Quay lại"/>

            <TextView
                android:id="@+id/tv_title_yeucau"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Quản lý Yêu cầu"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginLeft="8dp"/>

            <ImageButton
                android:id="@+id/btn_help_yeucau"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_help"
                app:tint="@color/white"/>

            <ImageButton
                android:id="@+id/btn_chat_yeucau"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_dialog_email"
                app:tint="@color/white"
                android:layout_marginLeft="8dp"/>

            <ImageButton
                android:id="@+id/btn_bell_yeucau"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                app:tint="@color/white"
                android:layout_marginLeft="8dp"/>

            <ImageView
                android:id="@+id/img_avatar_yeucau"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_gray"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <!--Tab-->
    <LinearLayout
        android:id="@+id/row_tabs_yeucau"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:elevation="2dp">

        <Button
            android:id="@+id/btn_tab_datlich"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Đặt lịch"
            android:textStyle="bold"
            android:background="@android:color/transparent"
            android:textColor="@color/muted"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_tab_tinnhan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Tin nhắn"
            android:background="@android:color/transparent"
            android:textColor="@color/primary"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btn_tab_thanhtoan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Thanh toán"
            android:background="@android:color/transparent"
            android:textColor="@color/muted"
            android:textSize="15sp"/>
    </LinearLayout>

    <View
        android:id="@+id/tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary"/>

    <!--Item-->
    <FrameLayout
        android:id="@+id/frame_yeucau_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bookings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clipToPadding="false"
            android:paddingBottom="80dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:clipToPadding="false"
            android:paddingBottom="80dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_payments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:clipToPadding="false"
            android:paddingBottom="80dp"/>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/bottom_nav_yeucau"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_view" app:tint="@color/muted"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Trang chủ" android:textSize="12sp" android:textColor="@color/muted"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_requests"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_send" app:tint="@color/primary"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Yêu cầu" android:textSize="12sp" android:textColor="@color/primary"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_stats"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_manage" app:tint="@color/muted"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Thống kê" android:textSize="12sp" android:textColor="@color/muted"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true">

            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_myplaces" app:tint="@color/muted"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Tài khoản" android:textSize="12sp" android:textColor="@color/muted"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
